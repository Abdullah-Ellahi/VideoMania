{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CosmosDb": {
    "Account": "${COSMOS_DB_ACCOUNT}",
    "Key": "${COSMOS_DB_KEY}",
    "DatabaseName": "videomania",
    "UsersContainer": "Users",
    "VideosContainer": "Videos",
    "CommentsContainer": "Comments"
  },
  "BlobStorage": {
    "ConnectionString": "${BLOB_STORAGE_CONNECTION_STRING}",
    "ContainerName": "videos",
    "SasTokenValidityMinutes": 30
  }
}
